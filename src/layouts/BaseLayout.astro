---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";

const {
  title = "Static Site Developer",
  description = "Fast. Secure. SEO-ready.",
} = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="icon" href="/logo/favicon.ico" />

    <ClientRouter fallback="none" />
  </head>

  <body class="bg-bg text-text antialiased flex flex-col min-h-screen">
    <!-- Header -->
    <header
      class="max-w-6xl mx-auto px-4 py-6 flex items-center justify-between"
      transition:persist
    >
      <!-- Logo -->
      <a href="/" 
         class="flex items-center gap-2 group select-none"
         aria-label="Go to home">
        <span class="font-mono text-2xl font-bold bg-gradient-to-r from-indigo-500 to-purple-600 bg-clip-text text-transparent group-hover:scale-110 transition-transform duration-300 ease-out">
          {'{'}h{'}'}
        </span>
        <span class="hidden sm:inline text-sm font-semibold opacity-70 group-hover:opacity-100 transition-opacity">
          Viktor Holovin
        </span>
      </a>

      <!-- Navigation -->
      <nav class="flex gap-8 text-sm ml-6">
        <a class="hover:text-accent transition-colors" href="/services">Services</a>
        <a class="hover:text-accent transition-colors" href="/portfolio">Portfolio</a>
        <a class="hover:text-accent transition-colors" href="/contact">Contact</a>
      </nav>
    </header>

    <!-- Main -->
    <main class="flex-1 px-4">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="max-w-6xl mx-auto px-4 py-8 text-sm opacity-80 text-center sm:text-left">
      © {new Date().getFullYear()} • 
      <span class="text-accent font-semibold">Static Site Developer</span> •
      <a class="underline hover:text-accent transition-colors" href="/privacy">Privacy</a>
    </footer>
  </body>
</html>
