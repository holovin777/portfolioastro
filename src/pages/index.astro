---
import BaseLayout from "../layouts/BaseLayout.astro";

const upworkUrl = "https://www.upwork.com/freelancers/~017c0f9f0d7677c477";
---

<BaseLayout title="Static Site Developer — Viktor Holovin" description="I build ultra-fast static websites with Astro.">
  <!-- Hero -->
  <section class="max-w-6xl mx-auto py-20 md:py-28">
    <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight">
      Static Site Developer — <span class="text-accent">Fast</span>. Secure. SEO-Ready.
    </h1>

    <p class="mt-4 text-lg md:text-2xl/relaxed opacity-90 max-w-3xl">
I build ultra-fast static websites, integrate APIs, and deliver clean, professional experiences that convert.
    </p>

<div class="not-prose mt-10 flex flex-wrap gap-4">
  <!-- Upwork -->
  <a
    href="https://www.upwork.com/freelancers/~017c0f9f0d7677c477"
    target="_blank"
    rel="noopener noreferrer"
    class="inline-block rounded-lg bg-gradient-to-r from-indigo-500 to-purple-600 px-6 py-3 text-base font-medium text-white hover:opacity-90 transition"
  >
    Hire me on Upwork
  </a>

  <!-- Fiverr -->
<a
  href="https://www.fiverr.com/holovin777"
  target="_blank"
  rel="noopener noreferrer"
  class="inline-block rounded-lg bg-gradient-to-r from-green-500 to-emerald-600 px-6 py-3 text-base font-medium text-white hover:opacity-90 transition"
>
  Hire me on Fiverr
</a>

  <!-- Portfolio -->
  <a
    href="/portfolio"
    class="inline-block rounded-lg border border-white/20 px-6 py-3 text-base font-medium text-text hover:border-white/40 hover:text-accent transition"
  >
    See portfolio
  </a>
</div>

  </section>
</BaseLayout>
