---
import BaseLayout from "../../layouts/BaseLayout.astro";

const projects = [
  {
    title: "La Magia dei Colori",
    desc: "Website built with Spring Boot backend and Qwik frontend.",
    stack: ["Spring Boot", "Qwik", "Astro-friendly"],
    href: "https://lamagiadeicolori.com",
  },
  {
    title: "InnoMarts — Personal Blog",
    desc: "Fast Hugo blog with multi-language content and fun courses.",
    stack: ["Hugo", "Markdown", "SEO"],
    href: "https://www.innomarts.com",
  },
  {
    title: "Personal Portfolio",
    desc: "My portfolio site powered by Java endpoints.",
    stack: ["Java", "APIs", "Frontend"],
    href: "https://www.holovin.com",
  },
  {
    title: "GitHub Blog",
    desc: "Developer notes and posts hosted on my blog subdomain.",
    stack: ["Hugo", "GitHub"],
    href: "https://blog.holovin.com",
  },
  {
    title: "Italiano con Geoff",
    desc: "Italian for English speakers — lightweight learning site.",
    stack: ["Vercel", "Next.js/Static"],
    href: "https://italianocongeoff.vercel.app/",
  },
];
---

<BaseLayout title="Portfolio — Selected Work" description="A small selection of websites and projects.">
  <section class="max-w-6xl mx-auto py-20">
    <h1 class="text-3xl md:text-4xl font-extrabold">Selected Work</h1>
    <p class="mt-3 opacity-80 max-w-2xl">
      A few live projects and personal sites I’ve built or maintain.
    </p>

    <div class="mt-10 grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {projects.map((p) => (
        <a
          href={p.href}
          target="_blank"
          rel="noopener noreferrer"
          class="group block rounded-2xl border border-white/15 bg-white/5 p-5 hover:border-white/30 hover:bg-white/10 transition"
        >
          <div class="flex items-start justify-between gap-3">
            <h3 class="font-semibold text-lg">{p.title}</h3>
            <!-- external-link icon -->
            <svg class="size-4 opacity-70 group-hover:opacity-100 transition" viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <path d="M14 4h6m0 0v6m0-6L10 14" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M20 14v4.2A1.8 1.8 0 0 1 18.2 20H6.8A1.8 1.8 0 0 1 5 18.2V6.8A1.8 1.8 0 0 1 6.8 5H11" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>

          <p class="mt-2 text-sm opacity-80">{p.desc}</p>

          <div class="mt-4 flex flex-wrap gap-2">
            {p.stack.map((s) => (
              <span class="rounded-full bg-white/10 px-2.5 py-1 text-xs opacity-90">
                {s}
              </span>
            ))}
          </div>
        </a>
      ))}
    </div>

    <!-- Optional CTA row -->
    <div class="not-prose mt-12">
      <a
        href="https://www.upwork.com/freelancers/~017c0f9f0d7677c477"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block rounded-lg bg-gradient-to-r from-indigo-500 to-purple-600 px-6 py-3 text-base font-semibold text-white shadow hover:opacity-90 transition"
      >
        Hire me on Upwork
      </a>
    </div>
  </section>
</BaseLayout>
